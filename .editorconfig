root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_size = 4
indent_style = tab

[*.bzl]
indent_size = 4
indent_style = space

[*.go]
indent_size = 4
indent_style = tab

[*.json]
indent_size = 4
indent_style = space

[*.{js,jsx,ts,tsx}]
indent_size = 4
indent_style = tab

[*.{tf,hcl,yml,yaml}]
indent_size = 2
indent_style = space
